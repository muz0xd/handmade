.blog
  .index-posts
    - @posts.each do |post|
      %h2
        %a{href: post_path(post)}
          = post.title
      = raw cut_post_body_by_tag post.body
      -#- if admin_signed_in?
      %div.foot
        = link_to 'edit', edit_post_path(post)
        = link_to 'destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' }
    %div.foot
      = link_to 'new', new_post_path #if admin_signed_in?
