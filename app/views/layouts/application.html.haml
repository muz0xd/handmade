    = csrf_meta_tags
  %body
    #canvas
      #header
        #logo
          %h1.logo
            %a{href: "/"} Елена Музина
        #topNav
          %nav.main-nav
            %ul
              %li#blog-nav
                %a{href: "/posts"} Блог
              %li#gallery-nav
                %a{href: "/my_works"} Мои работы
              %li#about-nav
                %a{href: "/about"} Обо мне
              - if admin_signed_in?
                %li
                  = link_to 'sign_out', destroy_admin_session_path, method: :delete
      %section#page
        = yield
      %footer#footer
        #footerBlock
          %p
            Powered by
