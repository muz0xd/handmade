%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:name => "description", :content => "Персональный сайт Елены Музиной, посвященный ручной работе и творчеству"}
    %meta{:name => "keywords", :content => "scrapbooking, скрапбукинг, ручная работа, альбомы, елена, музина, handmade"}
